<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.ContentFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kinghorn.inksplat.inksplat.InkSplatActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <RelativeLayout
                    android:id="@+id/paint_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:background="@android:color/black"
                    android:gravity="center_horizontal">

                </RelativeLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4.5"
                android:background="#171717"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/swatch_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/light_bottom_border"
                    android:orientation="horizontal"
                    android:paddingBottom="1dp"
                    android:scrollbars="none">

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_above="@+id/paintbrush_forward"
                        android:layout_alignStart="@+id/paintbrush_forward"
                        android:layout_weight="2"
                        android:scrollbars="none">

                        <LinearLayout
                            android:id="@+id/swatch_list"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:id="@+id/inkSwatch"
                                android:layout_width="70dp"
                                android:layout_height="match_parent"
                                android:alpha="1"
                                android:background="@drawable/swatch_option">

                                <RelativeLayout
                                    android:id="@+id/inkSwatchSplat"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginBottom="10dp"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginRight="15dp"
                                    android:layout_marginTop="10dp"
                                    android:background="@drawable/splat_icon"
                                    android:backgroundTint="?attr/colorButtonNormal">

                                </RelativeLayout>

                                <RelativeLayout
                                    android:id="@+id/inkSwatchArrow"
                                    android:layout_width="13dp"
                                    android:layout_height="15dp"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="-6dp"
                                    android:background="@drawable/triangle_down">

                                </RelativeLayout>

                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/inkSwatch"
                                android:layout_width="70dp"
                                android:layout_height="match_parent"
                                android:alpha="1"
                                android:background="@drawable/swatch_option">

                                <RelativeLayout
                                    android:id="@+id/inkSwatchSplat"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginBottom="10dp"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginRight="15dp"
                                    android:layout_marginTop="10dp"
                                    android:background="@drawable/splat_icon"
                                    android:backgroundTint="@android:color/holo_blue_light">

                                </RelativeLayout>

                                <RelativeLayout
                                    android:id="@+id/inkSwatchArrow"
                                    android:layout_width="13dp"
                                    android:layout_height="15dp"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="-6dp"
                                    android:background="@drawable/triangle_down"
                                    android:visibility="invisible">

                                </RelativeLayout>

                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/inkSwatch"
                                android:layout_width="70dp"
                                android:layout_height="match_parent"
                                android:alpha="1"
                                android:background="@drawable/swatch_option">

                                <RelativeLayout
                                    android:id="@+id/inkSwatchSplat"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginBottom="10dp"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginRight="15dp"
                                    android:layout_marginTop="10dp"
                                    android:background="@drawable/splat_icon"
                                    android:backgroundTint="@android:color/holo_green_light">

                                </RelativeLayout>

                                <RelativeLayout
                                    android:id="@+id/inkSwatchArrow"
                                    android:layout_width="13dp"
                                    android:layout_height="15dp"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="-6dp"
                                    android:background="@drawable/triangle_down"
                                    android:visibility="invisible">

                                </RelativeLayout>

                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/inkSwatch"
                                android:layout_width="70dp"
                                android:layout_height="match_parent"
                                android:alpha="1"
                                android:background="@drawable/swatch_option">

                                <RelativeLayout
                                    android:id="@+id/inkSwatchSplat"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginBottom="10dp"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginRight="15dp"
                                    android:layout_marginTop="10dp"
                                    android:background="@drawable/splat_icon"
                                    android:backgroundTint="@android:color/holo_orange_dark">

                                </RelativeLayout>

                                <RelativeLayout
                                    android:id="@+id/inkSwatchArrow"
                                    android:layout_width="13dp"
                                    android:layout_height="15dp"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="-6dp"
                                    android:background="@drawable/triangle_down"
                                    android:visibility="invisible">

                                </RelativeLayout>

                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/inkSwatch"
                                android:layout_width="70dp"
                                android:layout_height="match_parent"
                                android:alpha="1"
                                android:background="@drawable/swatch_option">

                                <RelativeLayout
                                    android:id="@+id/inkSwatchSplat"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginBottom="10dp"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginRight="15dp"
                                    android:layout_marginTop="10dp"
                                    android:background="@drawable/splat_icon"
                                    android:backgroundTint="@android:color/holo_purple">

                                </RelativeLayout>

                                <RelativeLayout
                                    android:id="@+id/inkSwatchArrow"
                                    android:layout_width="13dp"
                                    android:layout_height="15dp"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="-6dp"
                                    android:background="@drawable/triangle_down"
                                    android:visibility="invisible">

                                </RelativeLayout>

                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/inkSwatch"
                                android:layout_width="70dp"
                                android:layout_height="match_parent"
                                android:alpha="1"
                                android:background="@drawable/swatch_option">

                                <RelativeLayout
                                    android:id="@+id/inkSwatchSplat"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginBottom="10dp"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginRight="15dp"
                                    android:layout_marginTop="10dp"
                                    android:background="@drawable/splat_icon"
                                    android:backgroundTint="@android:color/holo_red_light">

                                </RelativeLayout>

                                <RelativeLayout
                                    android:id="@+id/inkSwatchArrow"
                                    android:layout_width="13dp"
                                    android:layout_height="15dp"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="-6dp"
                                    android:background="@drawable/triangle_down"
                                    android:visibility="invisible">

                                </RelativeLayout>

                            </RelativeLayout>

                        </LinearLayout>
                    </HorizontalScrollView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="10"
                        android:background="@android:color/background_light"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/EraserModeToggle"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:alpha=".2"
                            android:padding="15dp"
                            app:srcCompat="@drawable/eraser_icon" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/option_frame"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#171717"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:padding="15dp"
                        app:srcCompat="@drawable/icon_minus" />

                    <SeekBar
                        android:id="@+id/brush_seekbar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:max="100"
                        android:min="5"
                        android:progress="25"
                        android:progressTint="@android:color/holo_green_light"
                        android:scrollIndicators="top"
                        android:thumbTint="@android:color/holo_green_light" />

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:padding="15dp"
                        app:srcCompat="@drawable/icon_plus" />

                    <ImageButton
                        android:id="@+id/paintbrush_forward"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toEndOf="@+id/paintbrush_back"
                        android:background="@drawable/tool_ui_btn"
                        android:visibility="gone"
                        app:srcCompat="@drawable/icon_right" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/background_light"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/activityCancel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="false"
                android:layout_alignParentLeft="false"
                android:layout_alignParentStart="false"
                android:layout_centerHorizontal="false"
                android:layout_weight="1"
                android:alpha="1"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/paint_close" />

            <LinearLayout
                android:id="@+id/go_back_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:visibility="visible">

                <ImageButton
                    android:id="@+id/paintbrush_back"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="false"
                    android:layout_alignParentStart="false"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    app:srcCompat="@drawable/icon_rotate_back" />

                <TextView
                    android:id="@+id/backCounter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="0"
                    android:textColor="@android:color/darker_gray"
                    android:visibility="gone" />

            </LinearLayout>

            <ImageButton
                android:id="@+id/activityCheck"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="false"
                android:layout_alignParentRight="false"
                android:layout_alignParentStart="false"
                android:layout_centerHorizontal="false"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/paint_finish" />

        </LinearLayout>

    </RelativeLayout>
</android.support.v7.widget.ContentFrameLayout>
