<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kinghorn.squidswap.squidswap.SquidswapActivity">

    <LinearLayout
        android:id="@+id/MainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#C4C4C4"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <RelativeLayout
            android:id="@+id/ImageLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#000">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:text="Click below to select and image from gallery or take a photo."
                android:textAlignment="center"
                android:textColor="@android:color/background_light" />

            <ImageView
                android:id="@+id/ImagePreview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#66000000"
                android:padding="7dp"
                android:textAlignment="center">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Click below on a card to edit."
                    android:textAlignment="center"
                    android:textColor="@android:color/background_light" />
            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/CardsLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <HorizontalScrollView
                android:id="@+id/CardScroller"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:paddingBottom="56dp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/UnlockCard"
                        android:layout_width="250dp"
                        android:layout_height="match_parent"
                        android:alpha=".5"
                        android:background="@drawable/choice_card">

                        <TextView
                            android:id="@+id/Unlock"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/card_title"
                            android:padding="10dp"
                            android:text="Unlock"
                            android:textAlignment="center"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="150dp"
                            android:layout_height="100dp"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:layout_centerHorizontal="false"
                            android:layout_centerVertical="false"
                            android:paddingBottom="20dp"
                            android:paddingRight="20dp"
                            android:rotation="0"
                            app:srcCompat="@drawable/lock_icon" />

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="50dp"
                            android:paddingLeft="20dp"
                            android:paddingTop="10dp"
                            android:text="Click here to unlock extra tools and features."
                            android:textSize="18sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/SaveCard"
                        android:layout_width="250dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="1dp"
                        android:alpha=".5"
                        android:background="@drawable/choice_card">

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/card_title"
                            android:padding="10dp"
                            android:text="Save"
                            android:textAlignment="center"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="150dp"
                            android:layout_height="100dp"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:layout_centerHorizontal="false"
                            android:layout_centerVertical="false"
                            android:paddingBottom="20dp"
                            android:paddingRight="20dp"
                            android:rotation="0"
                            app:srcCompat="@drawable/icon_save" />

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="50dp"
                            android:paddingLeft="20dp"
                            android:paddingRight="10dp"
                            android:paddingTop="10dp"
                            android:text="Save the edited image to the gallery."
                            android:textSize="18sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/CropCard"
                        android:layout_width="250dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="1dp"
                        android:alpha=".5"
                        android:background="@drawable/choice_card">

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/card_title"
                            android:padding="10dp"
                            android:text="Crop"
                            android:textAlignment="center"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="150dp"
                            android:layout_height="100dp"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:layout_centerHorizontal="false"
                            android:layout_centerVertical="false"
                            android:paddingBottom="20dp"
                            android:paddingRight="20dp"
                            android:rotation="0"
                            app:srcCompat="@drawable/crop_icon" />

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="50dp"
                            android:paddingLeft="20dp"
                            android:paddingTop="10dp"
                            android:text="Use this tool to crop the selected image to a given dimension."
                            android:textSize="18sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/PaintCard"
                        android:layout_width="250dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="1dp"
                        android:alpha=".5"
                        android:background="@drawable/choice_card">

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/card_title"
                            android:padding="10dp"
                            android:text="Paint"
                            android:textAlignment="center"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="50dp"
                            android:background="@android:color/transparent"
                            android:paddingLeft="20dp"
                            android:paddingTop="10dp"
                            android:text="Draw designs on the image with different colors and brush sizes."
                            android:textSize="18sp" />

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:layout_centerHorizontal="false"
                            android:layout_centerVertical="false"
                            android:paddingBottom="20dp"
                            android:paddingRight="20dp"
                            android:rotation="0"
                            app:srcCompat="@drawable/icon_draw" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/SwapCard"
                        android:layout_width="250dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="1dp"
                        android:alpha=".5"
                        android:background="@drawable/choice_card">

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/card_title"
                            android:padding="10dp"
                            android:text="Swap"
                            android:textAlignment="center"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="50dp"
                            android:background="@android:color/transparent"
                            android:paddingLeft="20dp"
                            android:paddingTop="10dp"
                            android:text="Stamp this image onto another with a cool fading effect."
                            android:textSize="18sp" />

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:layout_centerHorizontal="false"
                            android:layout_centerVertical="false"
                            android:paddingBottom="20dp"
                            android:paddingRight="20dp"
                            android:rotation="0"
                            app:srcCompat="@drawable/icon_swap" />
                    </RelativeLayout>

                </LinearLayout>
            </HorizontalScrollView>

            <LinearLayout
                android:id="@+id/BottomOptions"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/OpenImage"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bottom_button"
                    app:srcCompat="@drawable/image_icon" />

                <ImageButton
                    android:id="@+id/CameraButton"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bottom_button"
                    app:srcCompat="@drawable/camera_icon" />
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

</FrameLayout>
